import os


def demand(termm, timee):

    match termm.lower():
        case 's':
            if timee == '':
                os.system("shutdown /s")
                print(''' You're given 30 SECONDS  to SAVE and CLOSE all your OnGoing File's 
                                                    GOOD NIGHT to ME ðŸ˜´                          ''')
                
            else:
                os.system(f"shutdown /s /t {timee}")
                print(f" MACHINE  gonna down within {timee} sec. GoodByeeee ðŸ–ðŸ–")
                

        case 'r':
            if time == '':
            
                os.system("shutdown /r")
                print(''' You're given 30 SECONDS  to SAVE and CLOSE all your OnGoing File's 
                                                           before REBOOTING ðŸ˜´                          ''')
                
            else:
                os.system(f"shutdown /r /t {timee}")
                print(f" MACHINE  gonna REBOOT within {timee} sec. GoodByeeee ðŸ–ðŸ–")
                

        case _:
            print("SORRY WRONG INPUT")
            exit()


def main():
    term = input(">How to PUT DOWN your machine SHUTDOWN(s)/RESTART(r) : ").strip()
    time = input(">Any specific timing [Enter in SECONDSðŸ˜´] / skip[ENTER] : ").strip()
    
    demand(term, time)
    
if __name__ == "__main__":
    main()
